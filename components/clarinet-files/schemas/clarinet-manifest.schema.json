{
  "$defs": {
    "ApiUrl": {
      "type": "string"
    },
    "ContractConfig": {
      "description": "Schema definition for contract configuration",
      "properties": {
        "clarity_version": {
          "description": "Clarity language version to use",
          "enum": [
            1,
            2,
            3
          ],
          "type": "integer"
        },
        "deployer": {
          "description": "Deployer identifier",
          "type": [
            "string",
            "null"
          ]
        },
        "epoch": {
          "anyOf": [
            {
              "$ref": "#/$defs/EpochValue"
            },
            {
              "type": "null"
            }
          ],
          "description": "Stacks blockchain epoch"
        },
        "path": {
          "description": "Relative path to the contract file from project root",
          "type": "string"
        }
      },
      "required": [
        "path",
        "clarity_version"
      ],
      "type": "object"
    },
    "EpochValue": {
      "anyOf": [
        {
          "description": "String epoch value",
          "enum": [
            "2.0",
            "2.05",
            "2.1",
            "2.2",
            "2.3",
            "2.4",
            "2.5",
            "3.0",
            "3.1",
            "3.2",
            "latest"
          ],
          "type": "string"
        },
        {
          "description": "Numeric epoch value",
          "enum": [
            2.0,
            2.05,
            2.1,
            2.2,
            2.3,
            2.4,
            2.5,
            3.0,
            3.1,
            3.2
          ],
          "type": "number"
        }
      ],
      "description": "Epoch can be specified as string or number"
    },
    "OneOrList": {
      "anyOf": [
        {
          "$ref": "#/$defs/Pass",
          "description": "Allow `T` as shorthand for `[T]` in the TOML"
        },
        {
          "description": "Allow more than one `T` in the TOML",
          "items": {
            "$ref": "#/$defs/Pass"
          },
          "type": "array"
        }
      ]
    },
    "Pass": {
      "enum": [
        "all",
        "call_checker",
        "check_checker",
        "noop_checker"
      ],
      "type": "string"
    },
    "ProjectConfigFile": {
      "properties": {
        "authors": {
          "description": "List of project authors",
          "items": {
            "type": "string"
          },
          "type": [
            "array",
            "null"
          ]
        },
        "boot_contracts": {
          "description": "List of boot contracts to include",
          "items": {
            "type": "string"
          },
          "type": [
            "array",
            "null"
          ]
        },
        "cache_dir": {
          "description": "Directory for caching build artifacts",
          "type": [
            "string",
            "null"
          ]
        },
        "description": {
          "description": "Project description",
          "type": [
            "string",
            "null"
          ]
        },
        "name": {
          "description": "Name of the project",
          "type": "string"
        },
        "override_boot_contracts_source": {
          "additionalProperties": {
            "type": "string"
          },
          "description": "Override default boot contract implementations",
          "type": [
            "object",
            "null"
          ]
        },
        "requirements": {
          "description": "External contract dependencies",
          "items": {
            "$ref": "#/$defs/RequirementConfig"
          },
          "type": "array"
        },
        "telemetry": {
          "description": "Enable or disable telemetry",
          "type": [
            "boolean",
            "null"
          ]
        }
      },
      "required": [
        "name",
        "requirements"
      ],
      "type": "object"
    },
    "RemoteDataSettingsFile": {
      "properties": {
        "api_url": {
          "anyOf": [
            {
              "$ref": "#/$defs/ApiUrl"
            },
            {
              "type": "null"
            }
          ]
        },
        "enabled": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "initial_height": {
          "format": "uint32",
          "minimum": 0,
          "type": [
            "integer",
            "null"
          ]
        },
        "use_mainnet_wallets": {
          "type": [
            "boolean",
            "null"
          ]
        }
      },
      "type": "object"
    },
    "RequirementConfig": {
      "properties": {
        "contract_id": {
          "description": "Contract identifier (e.g., SP2PABAF9FTAJYNFZH93XENAJ8FVY99RRM50D2JG9.nft-trait)",
          "type": "string"
        }
      },
      "required": [
        "contract_id"
      ],
      "type": "object"
    },
    "SettingsFile": {
      "properties": {
        "analysis": {
          "anyOf": [
            {
              "$ref": "#/$defs/SettingsFile2"
            },
            {
              "type": "null"
            }
          ]
        },
        "remote_data": {
          "anyOf": [
            {
              "$ref": "#/$defs/RemoteDataSettingsFile"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "type": "object"
    },
    "SettingsFile2": {
      "properties": {
        "check_checker": {
          "anyOf": [
            {
              "$ref": "#/$defs/SettingsFile3"
            },
            {
              "type": "null"
            }
          ]
        },
        "passes": {
          "anyOf": [
            {
              "$ref": "#/$defs/OneOrList"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "type": "object"
    },
    "SettingsFile3": {
      "properties": {
        "callee_filter": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "strict": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "trusted_caller": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "trusted_sender": {
          "type": [
            "boolean",
            "null"
          ]
        }
      },
      "type": "object"
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "contracts": {
      "additionalProperties": {
        "$ref": "#/$defs/ContractConfig"
      },
      "description": "Contract definitions",
      "type": "object"
    },
    "project": {
      "$ref": "#/$defs/ProjectConfigFile",
      "description": "Project-level configuration"
    },
    "repl": {
      "$ref": "#/$defs/SettingsFile",
      "description": "REPL and analysis settings"
    }
  },
  "required": [
    "project",
    "contracts",
    "repl"
  ],
  "title": "ProjectManifestFile",
  "type": "object"
}